<Window x:Class="OpMaat.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpMaat"
        mc:Ignorable="d"
        Title="StartWindow" 
        WindowStyle="None" ResizeMode="NoResize"  
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.Background>
        <ImageBrush ImageSource="Resources/Music-Background-7.jpg"></ImageBrush>
    </Window.Background>
    <Grid>
        <Button Style="{DynamicResource ButtonTemplate}" Content="Naar hoofdmenu" FontSize="40" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center" Width="357" Height="145" Click="Button_Click"/>
    </Grid>
</Window>
